package com.test;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import com.classes.Baralho;
import com.classes.NAIPE;

public class TestBaralho {

	private Baralho baralho;
	
	@Before
	public void setUp(){
		baralho = new Baralho();
	}
	
	@Test
	public void testListaBarallho() {
		String esperado;
		esperado = 	adicionaStringPara(NAIPE.COPAS);
		esperado += 	adicionaStringPara(NAIPE.ESPADAS);
		esperado += 	adicionaStringPara(NAIPE.OURO);
		esperado += 	adicionaStringPara(NAIPE.PAUS);
		System.out.print(esperado);
		assertEquals(esperado, baralho.listar());
	}

	private String adicionaStringPara(NAIPE naipe) {
		StringBuffer esperado = new StringBuffer();
		esperado.append("Às de "+naipe.toString()/n);
		for (int i = 2; i < 11; i++) {
			esperado.append(i+" de "+naipe.toString()+"/n");
		}
		esperado.append("Valete de "+naipe.toString()+"/n");
		esperado.append("Dama de "+naipe.toString()+"/n");
		esperado.append("Rei de "+naipe.toString()+"/n");
		return esperado.toString();
	}

}
