package tests;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import com.classes.Baralho;
import com.classes.Jogador;
import com.classes.jogo.Partida;
import com.test.StringEsperadas;

public class TestJogo {

	private Baralho deck;
	private Jogador apostador;
	private Partida pr;

	@Before
	public void setUp() {
		apostador = new Jogador("Apostador");
		pr = new Partida(apostador);
		deck = new Baralho();
	}
	
	@Test
	public void testBaralhoOrdenado(){
		assertEquals(StringEsperadas.listaDeCartasOrdenada(), pr.listarBaralho());
	}
	
	@Test
	public void testPartidaApostadorComprandoAte21(){
		pr = new Partida(apostador);
		pr.iniciaPartida();
		while (pr.getPontuacaoApostador() < 21) {
			pr.jogadaApostador();			
		}		
		assertEquals(21, pr.getPontuacaoApostador());
	}

}
