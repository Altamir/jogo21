package com.classes;

public class Carta {

	private int valor;
	private NAIPE naipe;
	private boolean usada;

	public Carta(int valor, NAIPE naipe) {
		this.valor = valor;
		this.naipe = naipe;
		this.usada = false;
	}
	
	@Override
	public String toString(){
		return valorToString() +" de " + naipe.name();		
	}

	private String valorToString() {
		String valorTemp = new String();
		if (valor > 1 && valor < 11) {
			valorTemp = String.valueOf(valor);
		}else{
			switch (valor) {
			case 1:
				valorTemp = "Às";
				break;
			case 11:
				valorTemp = "Valete";
				break;
			case 12:
				valorTemp = "Dama";
				break;
			case 13:
				valorTemp = "Rei";
				break;			
			}
		}
		return valorTemp;
	}

}
